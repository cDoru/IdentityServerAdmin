@{
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
@model LoginViewModel

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label form-group">
                <label class="mdl-textfield__label text-muted" >Username</label>
                <input asp-for="Username" class="mdl-textfield__input text-muted"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label form-group">
                <input asp-for="Password" class="mdl-textfield__input" />
                <label class="mdl-textfield__label text-muted" >Password</label>
                 <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="RememberLogin" class="mdl-checkbox mdl-js-checkbox text-muted">
                    <input asp-for="RememberLogin" type="checkbox"  class="mdl-checkbox__input text-muted">
                    <span class="mdl-checkbox__label">Remember me?</span>
                </label>
            </div>
            
            <div class="form-group">
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent btn-block">
                    Log in
                </button>
            </div>
            <p>
                
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-action="Register" asp-route-returnurl="@Model.ReturnUrl">Register</a>
            </p>
        </form>
    </div>
</div>
