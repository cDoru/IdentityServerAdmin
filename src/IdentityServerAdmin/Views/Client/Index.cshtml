@using System.Collections.Generic
@model System.Collections.Generic.IList<IdentityServerAdmin.Dtos.ClientDto>
    <div>
        <h1 class="mdl-typography--display-1 text-muted">Clients</h1>
        <div class="row">
            <a asp-action="CreateClient" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored" style="margin-left: 15px; margin-bottom: 15px;">
                
                <i class="material-icons">add</i>            
            </a>
        </div>
        <div class="table-responsive-vertical shadow-z-1">
            <table  class="mdl-data-table mdl-js-data-table" style="width: 100%">

                <thead>
                    <tr>
                        <th class="mdl-data-table__cell--non-numeric">Name</th>
                        <th class="mdl-data-table__cell--non-numeric">Client Id</th>
                        <th class="mdl-data-table__cell--non-numeric">Url</th>
                        <th class="mdl-data-table__cell--non-numeric">Is Enabled?</th>
                        <th class="mdl-data-table__cell--non-numeric">Protocol Type</th>
                        <th class="mdl-data-table__cell--non-numeric" style="width: 10%">Commands</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td class="mdl-data-table__cell--non-numeric">@item.Name</td>
                            <td class="mdl-data-table__cell--non-numeric">@item.ClientId</td>
                            <td class="mdl-data-table__cell--non-numeric">@item.Uri</td>
                            <td class="mdl-data-table__cell--non-numeric">@item.IsEnabled</td>
                            <td class="mdl-data-table__cell--non-numeric">@item.ProtocolType</td>
                            <td class="mdl-data-table__cell--non-numeric">
                                <a asp-action="EditClient" asp-route-id="@item.Id" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored">
                                    <i class="material-icons">edit</i>
                                </a>
                               

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
